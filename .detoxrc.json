{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "configurations": {
    "ios": {
      "type": "ios.simulator",
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/Detox01.app",
      "build": "xcodebuild -workspace ios/Detox01.xcworkspace -scheme Detox01 -configuration Release  -sdk iphonesimulator -derivedDataPath ios/build",
      "device": {
        "type": "iPhone 8"
      }
    },
    "android": {
      "type": "android.emulator",
      "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android ; ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release ; cd -",
      "device": {
        "avdName": "Pixel_API_28_AOSP"
      }
    }
  }
}
